{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project src/tsconfig.json",
    "build": "npm run clear && tsc --project src/tsconfig.json",
    "clear": "rm -rf lib || true",
    "serve": "npm run build && firebase serve ",
    "shell": "npm run build && firebase functions:shell",
    "emulate": "npm run build && firebase emulators:start",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "ts-mocha -p test/tsconfig.json",
    "test:debug": "ts-mocha -p test/tsconfig.json --inspect-brk=5858"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/firestore": "^2.2.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.2.0",
    "firebase-functions": "^3.1.0",
    "firebase-functions-test": "^0.1.6"
  },
  "devDependencies": {
    "@testdeck/di-typedi": "0.0.6",
    "@testdeck/mocha": "0.0.6",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.2",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "reflect-metadata": "^0.1.13",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.12.0",
    "typedi": "^0.8.0",
    "typescript": "^3.2.2"
  },
  "private": true
}